<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tyr.subway3" >

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SmileActivity"></activity>
        <activity android:name=".activity.MusicActivity"></activity>
        <activity android:name=".activity.FilmActivity"></activity>
        <activity android:name=".activity.FilmLikeTypeActivity"></activity>
        <activity android:name=".activity.DrawerActivity"></activity>
        <activity android:name=".activity.VideoLikeTypeActivity"></activity>
        <activity android:name=".activity.VideoActivity"></activity>
        <service android:name=".DownLoad.DownloadService"></service>
        <receiver android:name=".AlarmReceiver"></receiver>
    </application>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
</manifest>
